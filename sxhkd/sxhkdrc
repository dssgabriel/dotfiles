# My configuration for sxhkd, the Simple X hotkey daemon.

### WM INDEPENDENT BINDINGS ###
# Terminal emulator
super + Return
	kitty

# Web browser
super + b
    brave

# Eww dock
super + d
	~/scripts/is_eww_open.sh

# Program launcher
super + space
	rofi -show run

# SSH launcher
super + space + s
	rofi -show ssh

# Switch window
alt + Tab
	rofi -show window

# Reload sxhkd
super + alt + s
	pkill -USR1 -x sxhkd

# Lock screen
alt + shift + x
    betterlockscreen -l dimblur --display 2

# System control
super + {F1,F2,F3}
	systemctl {shutdown,reboot,suspend}


### MEDIA CONTROLS ###
# Brightness keybindings
XF86MonBrightness{Up,Down}
	xbacklight {-inc,-dec} 10

# Media keybindings
XF86Audio{Next,Prev,Play,Stop}
	playerctl {next,previous,play-pause,stop}

# Volume keybindings
XF86Audio{RaiseVolume,LowerVolume}
	pamixer -{'i2','d2'}

XF86AudioMute
	pamixer -t


### BSPWM BINDINGS ###
# Quit/reload bspwm
super + alt + {q,r}
	bspc {quit, wm -r}

# Close and kill window
super + Escape
	bspc node -{c,k}

# Alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# If current node is automatic send it to the last manual otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Swap current node and biggest node
super + g
	bspc node -s biggest


### STATE & FLAGS ###
# Set window state
super + {t,shift + t,shift + s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}


### FOCUS & SWAP ###
# Focus node in given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus node for given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Focus next/previous node in current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# Focus next/previous desktop in current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Focus last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Focus older or newer node in focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus or send to given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


### PRESELECT ###
# Preselect direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Preselect ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel preselection for focused node
super + ctrl + space
	bspc node -p cancel

# Cancel preselection for focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


### MOVE & RESIZE ###
# Expand window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

