* {
    background-color: #2e3440;
    border: 0px;
    border-color: #3b4353;
    text-color: #d8dee9;
    width: 720px;
    height: 480px;
    font: "Source Code Pro 12";
}

window {
    location: center;
    anchor: center;
    padding: 8px;
    border: 2px;
    border-color: @text-color;
    border-radius: 8px;
    spacing: 0px;
}

inputbar {
    padding: 4px 4px 4px 4px;
    border: 1px 1px 1px 1px;
    border-color: @text-color;
    children: [prompt,entry];
}

prompt {
    padding: 3px;
    border: 0px 3px 0px 0px;
    font: "Source Code Pro Bold 14";
}

entry {
    padding: 4px;
}

textbox {
    background-color: #2e3440;
    border: 0px 0px 2px 0px;
    border-color: #3b4252;
    padding: 8px;
}

listview {
    cycle: true;
    margin: 0px 0px -8px 0px;
    scrollbar: false;
}

element {
    border: 0px 0px 3px 0px;
    padding: 16px;
}

element selected {
    background-color: #4c566a;
    font: "Source Code Pro Bold 12";
}
