; To learn more about how to configure polybar
; go to https://github.com/polybar/polybar


; Define colors used in the bars
[colors]
background=#161616
background-alt=#323232
foreground=#e4e4e4
foreground-alt=#d3d3d3
primary=#e4e4e4
secondary=#fe8019
alert=#fb4934


; Configuration for bar1
[bar/bar1]
; Monitor
monitor=eDP-1-1
monitor-fallback=eDP-1-1

; Dimensions
width=1680
height=32
offset-x=120
offset-y=8
line-size=4
padding-left=2
padding-right=2
module-margin-left=0
module-margin-right=2

; Style
radius=12.0
fixed-center=true
background=${colors.background}
foreground=${colors.foreground}

; Fonts
font-0=Source Code Pro Medium:style=Medium:size=11;3
;font-0=Terminus:style=Regular:size=14;3
font-1=M+ 1mn medium:style=medium;1
font-2=Material Design Icons:style=Regular;3
font-3=FontAwesome:style=Regular;3

; Contents
modules-left=bspwm 
modules-center=xwindow
modules-right=temperature battery pulseaudio wlan date 
locale=en_US.UTF-8

; Settings
wm-restack=bspwm
;override-redirect=true
cursor-click=pointer
cursor-scroll=ns-resize

; Bspwm module config
[module/bspwm]
type=internal/bspwm
module-margin-left=8
module-margin-right=8

; Focused workspace
label-focused-font=4
label-focused=%name%
label-focused-background=${colors.background-alt}
label-focused-underline=${colors.foreground}
label-focused-padding=1

; Occupied workspace
label-occupied=%name%
label-occupied-padding=1
label-occupied-background=#242424

; Empty workspace
label-empty=%name%
label-empty-padding=1


; Xwindow module config
[module/xwindow]
type=internal/xwindow
label=%title:0:30:...%


; Powermenu (custom) module config
[module/powermenu]
type=custom/menu
expand-right=true
format-spacing=0
label-open=
label-close= 
label-separator=|
menu-0-0=Reboot
menu-0-1-exec=reboot
menu-0-2=Shutdown
menu-0-2-exec=sudo shutdown now


; Date module config
[module/date]
type=internal/date
interval=1
date=
date-alt="%Y/%m/%d - "
time=%H:%M
time-alt=%H:%M:%S
label= %date%%time%


; Wlan module config
[module/wlan]
type = internal/network
interface = wlo1
interval = 3.0
ramp-signal-0= 
label-connected=%essid:0:8:...%
format-connected=<ramp-signal> <label-connected>
label-disconnected=
format-disconnected=<label-disconnected> No connection


; Pulseaudio module config
[module/pulseaudio]
type=internal/pulseaudio
format-volume=<label-volume>
label-volume= %percentage%%
label-muted= MUTE


; Battery module config
[module/battery]
type=internal/battery
battery=BAT0
adapter=ADP1
full-at=99
empty-at=5
label-empty= 0%!
label-full= 100%
label-charging= %percentage%%
label-discharging= %percentage%%


; Temperature module config
[module/temperature]
type=internal/temperature
thermal-zone=0
warn-temperature=60
format=<ramp> <label>
format-warn=<ramp> <label-warn>
label=%temperature-c%
label-warn=%temperature-c%!
label-warn-foreground=${colors.secondary}
ramp-0=


; CPU module config
[module/cpu]
type=internal/cpu
interval=1
label=%percentage%%


; Memory module config
[module/memory]
type=internal/memory
interval=1 
label=%percentage_used%%


; Xkeyboard module config
[module/xkeyboard]
type=internal/xkeyboard
blacklist-0=num lock
label-layout= %layout%


; General settings
[settings]
screenchange-reload=true
;compositing-background=xor
;compositing-background=screen
;compositing-foreground=source
;compositing-border=over
pseudo-transparency=true


; Others
[global/wm]
margin-top=5
margin-bottom=0
;vim:ft=dosini
